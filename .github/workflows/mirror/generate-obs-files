#!/bin/bash

if [[ ${no_changes+x} ]]; then
    exit 0
fi

cd ${PACKAGE}

# TODO: generate constraints programatically
cat > "_constraints" << EOF
<!-- vim: set ft=xml : -->
<constraints>
  <hardware>
    <disk>
      <size unit="G">16</size>
    </disk>
    <memory>
      <size unit="G">16</size>
    </memory>
  </hardware>
</constraints>

EOF

# generate _service file
python ../.github/workflows/mirror/gen-service.py

